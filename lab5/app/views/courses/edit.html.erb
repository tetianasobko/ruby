<% content_for :title, "Editing course" %>

<div class="card mb-4">
  <div class="card-header">
    <h2>Edit Course</h2>
  </div>
  <div class="card-body">
    <%= render "form", course: @course %>
  </div>
</div>

<div class="row">
  <div class="col-md-6">
    <div class="card mb-4">
      <div class="card-header">
        <h3>Add New Teacher</h3>
      </div>
      <div class="card-body">
        <p>Create a new teacher for this course:</p>
        <%= link_to new_teacher_path(teacher: { course_id: @course.id }), class: "btn btn-outline-primary" do %>
          <i class="bi bi-plus-circle"></i> Add New Teacher
        <% end %>
      </div>
    </div>
  </div>
  
  <div class="col-md-6">
    <div class="card mb-4">
      <div class="card-header">
        <h3>Add New Topic</h3>
      </div>
      <div class="card-body">
        <p>Create a new topic for this course:</p>
        <%= link_to new_topic_path(topic: { course_id: @course.id }), class: "btn btn-outline-primary" do %>
          <i class="bi bi-plus-circle"></i> Add New Topic
        <% end %>
      </div>
    </div>
  </div>
</div>

<div>
  <%= link_to "Show this course", @course, class: "btn btn-outline-secondary" %> |
  <%= link_to "Back to courses", courses_path, class: "btn btn-outline-secondary" %>
</div>
